---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import StarField from "../components/StarField";
import BentoGrid from "../components/BentoGrid.astro";
import Projects from "../components/Projects.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Aitor | Portfolio V2">
  <StarField client:only="react" />

  <main
    class="relative z-10 h-screen flex flex-col justify-center items-center px-4"
  >
    <div
      class="border border-dim-gray p-12 bg-space-black/50 backdrop-blur-sm max-w-4xl w-full text-center"
    >
      <p
        class="font-sans text-space-orange tracking-widest text-sm mb-4 uppercase font-semibold"
      >
        Software Developer
      </p>

      <h1
        class="font-display text-5xl md:text-7xl font-bold mb-6 leading-tight"
      >
        AITOR <span class="text-dim-gray">/</span> DEV
      </h1>

      <p class="font-sans text-lg text-gray-400 max-w-lg mx-auto mb-8">
        Construyendo sistemas escalables en el vacío digital. Minimalismo,
        rendimiento y precisión.
      </p>

      <div class="flex flex-col md:flex-row justify-center gap-4">
        <a
          href="#projects"
          class="bg-white text-black px-8 py-3 font-display font-bold hover:bg-[#FF5500] hover:text-white transition-colors duration-300"
        >
          VER PROYECTOS
        </a>

        <a
          href="#contact"
          class="border border-white/20 text-white px-8 py-3 font-bold tracking-wide hover:bg-white/10 transition-colors duration-300"
        >
          CONTACTAR
        </a>
      </div>
    </div>
  </main>
  <BentoGrid />
  <Projects />
  <Footer />
</Layout>
