<style is:global>
  /* DEFINICIÓN DE VARIABLES */
  :root {
    /* MODO ORBIT (Default) */
    --color-bg: #050505;
    --color-accent: #ff5500; /* Naranja Espacial */
    --color-text: #f2f2f2;
    --color-dim: #333333;
  }

  /* MODO ABYSS (Buceo) */
  [data-theme="abyss"] {
    --color-bg: #00101f; /* Azul Profundo */
    --color-accent: #00e5ff; /* Cian Neón */
    --color-text: #e0f7fa; /* Blanco azulado */
    --color-dim: #1a3a5a;
  }

  html,
  body {
    background-color: transparent; /* <--- CAMBIO CLAVE: Antes era var(--color-bg) */
    color: var(--color-text);
    transition: color 0.5s ease; /* Quitamos background-color de la transición aquí */
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  /* CLASES DE UTILIDAD PARA TAILWIND (Para evitar conflictos) */
  .bg-accent {
    background-color: var(--color-accent) !important;
  }
  .text-accent {
    color: var(--color-accent) !important;
  }
  .border-accent {
    border-color: var(--color-accent) !important;
  }
  .hover-text-accent:hover {
    color: var(--color-accent) !important;
  }
  .hover-bg-accent:hover {
    background-color: var(--color-accent) !important;
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: var(--color-bg);
  }
  ::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  .font-display,
  .font-sans {
    transition:
      color 0.5s ease,
      opacity 0.5s ease;
  }

  /* Animación de entrada suave */
  .fade-content {
    animation: fadeIn 0.8s ease forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
      filter: blur(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  /* Transición de colores para todo el texto */
  h1,
  h2,
  h3,
  p,
  span,
  a {
    transition:
      color 0.8s ease-in-out,
      border-color 0.8s ease-in-out,
      background-color 0.8s ease-in-out;
  }
</style>
