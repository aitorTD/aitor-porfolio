---
import { Briefcase, Anchor } from 'lucide-react';

const devExperience = [
  {
    period: {
      en: "November 2025 — Present",
      es: "November 2025 — Actualidad"
    },
    role: {
      en: "Software Developer",
      es: "Operario Especializado en Procesos Críticos"
    },
    company: "FMG Granada",
    highlights: {
      en: [
        "Technical execution in mission-critical environments, ensuring sub-millimeter precision and zero-fault tolerance.",
        "Strict adherence to QA and safety protocols under high-risk regulatory frameworks.",
        "Operational excellence through rigorous methodologies, prioritizing standardization and peak efficiency."
      ],
      es: [
        "Ejecución técnica en entorno de misión crítica, garantizando precisión milimétrica y tolerancia cero a fallos.",
        "Cumplimiento estricto de QA y seguridad, bajo normativas de alto riesgo.",
        "Trabajo bajo metodología rigurosa, priorizando la estandarización y eficiencia."
      ]
    }
  },
  {
    period: {
      en: "April 2024 — June 2025",
      es: "Abril 2024 — Junio 2025"
    },
    role: {
      en: "IT Manager",
      es: "IT Manager"
    },
    company: "CL Granada",
    highlights: {
      en: [
        "Python-based automation of administrative tasks and workflows.",
        "Migrated legacy systems to Cloud infrastructure for enhanced scalability.",
        "Full-spectrum cybersecurity auditing: vulnerability assessment and strategic contingency planning."
      ],
      es: [
        "Automatización con Python de flujos administrativos, reduciendo carga manual.",
        "Migración a infraestructura Cloud, aumentando escalabilidad y seguridad.",
        "Auditoría integral y estrategia de ciberseguridad: Diagnóstico 360º de la infraestructura, detección de vulnerabilidades y diseño de un plan director de seguridad y contingencia adaptado al negocio."
      ]
    }
  },
    {
      period: {
      en: "March 2022 — June 2022",
      es: "Marzo 2022 — Junio 2022"
    },
    role: {
      en: "Front-End Developer Intership",
      es: "Desallorrador Front-End en prácticas"
    },
    company: "Grupo Trevenque",
    highlights: {
      en: [
        "Customizing web templates (branding, layouts) to meet client needs.",
        "Front-end optimization and cross-device responsiveness troubleshooting.",
        "Overseeing deployments to ensure error-free launches."
      ],
      es: [
        "Personalización de plantillas web (branding, layouts) para clientes.",
        "Optimización Front-end y resolución de problemas de adaptabilidad.",
        "Supervisión de despliegues para garantizar publicaciones sin errores."
      ]
    }
  }
];

const diveExperience = [
  {
    period: {
      en: "July 2025",
      es: "Julio de 2025"
    },
    role: {
      en: "PSS Open Water Diver",
      es: "PSS Open Water Diver"
    },
    place: "Different Scuba School, La Herradura",
    highlights: {
      en: [
        
