                  {dive.location}
                </h3>
              </div>
              <p class="font-mono text-xs text-gray-500">
                {dive.date}
              </p>
            </div>

            <!-- Right: Dive Data -->
            <div class="flex flex-wrap gap-10">
              <div class="flex items-center gap-2">
                <MapPin size={14} className="text-accent" />
                <div>
                  <p class="text-xs text-gray-500">Depth</p>
                  <p class="font-mono text-sm text-white">{dive.depth}</p>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <Thermometer size={14} className="text-accent" />
                <div>
                  <p class="text-xs text-gray-500">Temp</p>
                  <p class="font-mono text-sm text-white">{dive.temperature}</p>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <Clock size={14} className="text-accent" />
                <div>
                  <p class="text-xs text-gray-500">Time</p>
                  <p class="font-mono text-sm text-white">{dive.time}</p>
                </div>
              </div>

              <div class="flex items-center">
                <span class="px-3 py-1 bg-accent/20 text-accent text-xs rounded-full font-mono">
                  {dive.type}
                </span>
              </div>
            </div>
          </div>
        </div>
      </article>
    ))}

    <div class="flex justify-center pt-4">
      <button
        type="button"
        data-dives-more
        class="px-6 py-3 rounded-full bg-white/10 backdrop-blur-md border border-white/20 hover:border-accent transition-all duration-300 font-mono text-xs tracking-widest cursor-pointer"
      >
        <span class="lang-en">SHOW MORE</span>
        <span class="lang-es">VER MÁS</span>
      </button>
      <button
        type="button"
        data-dives-less
        class="ml-3 px-6 py-3 rounded-full bg-white/10 backdrop-blur-md border border-white/20 hover:border-accent transition-all duration-300 font-mono text-xs tracking-widest cursor-pointer"
      >
        <span class="lang-en">SHOW LESS</span>
        <span class="lang-es">VER MENOS</span>
      </button>
    </div>
  </div>
</section>

<script>
  (() => {
    const setDivesLabel = () => {
      const labelEl = document.querySelector<HTMLElement>('[data-dives-label]');
      if (!labelEl) return;

      const lang = document.documentElement.dataset.lang;
      labelEl.textContent = lang === 'es' ? 'inmersiones' : 'dives';
    };

    setDivesLabel();

    const observer = new MutationObserver(() => {
      setDivesLabel();
    });

    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['data-lang'] });

    const section = document.querySelector<HTMLElement>('#projects');
    if (!section) return;

    const container = section.querySelector<HTMLElement>('[data-dives]');
    if (!container) return;

    const items = Array.from(container.querySelectorAll<HTMLElement>('.dive-item'));
    const moreBtn = container.querySelector<HTMLButtonElement>('[data-dives-more]');
    const lessBtn = container.querySelector<HTMLButtonElement>('[data-dives-less]');

    if (!moreBtn || !lessBtn || items.length === 0) return;

    const step = 5;
    let visible = step;

    const update = (prevVisible = visible) => {
      items.forEach((el, idx) => {
        const shouldShow = idx < visible;
        el.style.display = shouldShow ? '' : 'none';

        if (shouldShow && idx >= prevVisible) {
          el.classList.remove('dive-reveal');
          void el.offsetWidth;
          el.classList.add('dive-reveal');
        }
      });

      moreBtn.style.display = visible < items.length ? '' : 'none';
      lessBtn.style.display = visible > step ? '' : 'none';
    };

    moreBtn.addEventListener('click', () => {
      const prev = visible;
      visible = Math.min(items.length, visible + step);
      update(prev);
    });

    lessBtn.addEventListener('click', () => {
      visible = step;
      update(visible);
      section.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });

    update(0);
  })();
</script>

<style>
  @keyframes diveReveal {
    from {
      opacity: 0;
      transform: translateY(10px);
      filter: blur(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .dive-reveal {
    animation: diveReveal 0.45s ease both;
  }
</style>