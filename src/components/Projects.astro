        </div>

        <div class="absolute top-0 right-0 p-2 opacity-50">
          <ArrowUpRight size={12} className="text-space-orange opacity-0 group-hover:opacity-100 transition-opacity" />
        </div>
      </article>
    ))}
  </div>

  <!-- Diving Log (Abyss Theme) -->
  <div class="abyss-content space-y-4" data-dives>
    {dives.map((dive) => (
      <article class="dive-item group relative bg-[#00101F]/80 backdrop-blur-sm border border-white/10 overflow-hidden hover:border-cyan-500/50 transition-all duration-500">
        <div class="p-4">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
            <!-- Left: Date and Location -->
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <Anchor size={16} className="text-accent" />
